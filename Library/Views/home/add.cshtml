@model Library.Models.book
@{
    ViewBag.Title = "add";
    Layout = "~/Views/shared/_lay.cshtml";
}

@section head{
        <h1>add book</h1>        
}
<div class="container">   

    @using (Html.BeginForm("add", "home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(e => e.name, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(e => e.name, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.isbn, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(e => e.isbn, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.isbn, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.author, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(e => e.author, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.author, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.img_url, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(e => e.img_url, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.img_url, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.desc, new { @class = "col-sm-2 col-form-label" })
            @Html.TextAreaFor(e => e.desc, new { @class = "form-control" })
            @Html.ValidationMessageFor(e => e.desc, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.empBId, new { @class = "col-sm-2 col-form-label" })
            @Html.DropDownListFor(e => e.empBId, ViewBag.emp as SelectList, new { @class = "form-control", disabled = "disabled" })                        
            @Html.ValidationMessageFor(e => e.empBId, "", new { @class = "text-danger"})            
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    }
</div>


